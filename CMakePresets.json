{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-multi",
      "displayName": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/builds/${presetName}",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "vc++",
      "displayName": "windows x64",
      "inherits": "ninja-multi",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "gcc10",
      "displayName": "gcc 10",
      "inherits": "ninja-multi",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc-10",
        "CMAKE_CXX_COMPILER": "g++-10"
      }
    },
    {
      "name": "gcc11",
      "displayName": "gcc 11",
      "inherits": "ninja-multi",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc-11",
        "CMAKE_CXX_COMPILER": "g++-11"
      }
    },
    {
      "name": "clang",
      "displayName": "clang",
      "inherits": "ninja-multi",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "clang12",
      "displayName": "clang 12",
      "inherits": "ninja-multi",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-12",
        "CMAKE_CXX_COMPILER": "clang++-12"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-debug",
      "configurePreset": "vc++",
      "configuration": "Debug",
      "verbose": true
    },
    {
      "name": "x64-release",
      "configurePreset": "vc++",
      "configuration": "Release",
      "verbose": true
    },
    {
      "name": "gcc10-debug",
      "configurePreset": "gcc10",
      "configuration": "Debug",
      "verbose": true
    },
    {
      "name": "gcc10-release",
      "configurePreset": "gcc10",
      "configuration": "Release",
      "verbose": true
    },
    {
      "name": "gcc11-debug",
      "configurePreset": "gcc11",
      "configuration": "Debug",
      "verbose": true
    },
    {
      "name": "gcc11-release",
      "configurePreset": "gcc11",
      "configuration": "Release",
      "verbose": true
    },
    {
      "name": "clang-debug",
      "configurePreset": "clang",
      "configuration": "Debug",
      "verbose": true
    },
    {
      "name": "clang-release",
      "configurePreset": "clang",
      "configuration": "Release",
      "verbose": true
    }
  ],
  "testPresets": [
    {
      "name": "x64-debug",
      "configurePreset": "vc++",
      "configuration": "Debug"
    },
    {
      "name": "x64-release",
      "configurePreset": "vc++",
      "configuration": "Release"
    },
    {
      "name": "gcc10-debug",
      "configurePreset": "gcc10",
      "configuration": "Debug"
    },
    {
      "name": "gcc10-release",
      "configurePreset": "gcc10",
      "configuration": "Release"
    },
    {
      "name": "gcc11-debug",
      "configurePreset": "gcc11",
      "configuration": "Debug"
    },
    {
      "name": "gcc11-release",
      "configurePreset": "gcc11",
      "configuration": "Release"
    },
    {
      "name": "clang-debug",
      "configurePreset": "clang",
      "configuration": "Debug"
    },
    {
      "name": "clang-release",
      "configurePreset": "clang",
      "configuration": "Release"
    }
  ]
}